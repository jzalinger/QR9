// parts of GUI that displays map

import java.awt.*;
import javax.swing.*;


public class WCanvas extends JComponent {

    private int w;
    private int h;
    private ClientData data;


    public WCanvas(int w,int h) {
	this.w=w;
	this.h=h;
	setPreferredSize(new Dimension(w,h));
	setBackground(Color.WHITE);
	data=new ClientData(); //with default info
    } //constructor



    public void update() {
	//fetch latest version of data
	data=Client.getData();
    } //update



    public void paintComponent(Graphics g) {
	/* ** */g.setColor(Color.BLACK);
	/* ** */g.drawString("("+data.getXCoord()+", "+data.getYCoord()+")",50,50);
    } //paintComponent


} //class